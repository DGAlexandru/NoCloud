{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "module": "commonJS",
        "target": "es2020",
        "lib": ["es2020"],
        "moduleResolution": "node",
        "sourceMap": true,
        "alwaysStrict": true,
        "noEmit": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": ["lib"]
}
